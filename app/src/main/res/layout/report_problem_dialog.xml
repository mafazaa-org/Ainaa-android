<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- Close Icon and Title -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/closeButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:src="@android:drawable/ic_menu_close_clear_cancel" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="الإبلاغ عن مشكلة"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <!-- Name Field -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="الاسم"
        android:textColor="#000000"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/nameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/edit_text"
        android:hint="برجاء إدخال الاسم"
        android:padding="10dp"
        android:textDirection="rtl" />

    <!-- Phone Field -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="4dp"
        android:text="رقم الهاتف"
        android:textColor="#000000"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/phoneInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/edit_text"
        android:inputType="phone"
        android:padding="10dp"
        android:textDirection="rtl" />

    <!-- Email Field -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="4dp"
        android:text="البريد الإلكتروني"
        android:textColor="#000000"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/emailInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/edit_text"
        android:hint="برجاء إدخال البريد الإلكتروني"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textDirection="rtl" />

    <!-- Problem Field -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="4dp"
        android:text="المشكلة"
        android:textColor="#000000"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/problemInput"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@android:drawable/edit_text"
        android:gravity="top|right"
        android:hint="اكتب هنا.."
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:textDirection="rtl" />

    <!-- Submit Button -->
    <Button
        android:id="@+id/sendButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="?attr/colorPrimary"
        android:text="إرسال"
        android:textColor="#FFFFFF" />

    <!-- Footer Message -->
    <TextView
        android:id="@+id/footerMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="سنتواصل معك عبر البريد الإلكتروني أو الهاتف في أقرب وقت."
        android:textColor="#888888"
        android:textSize="12sp" />
</LinearLayout>
